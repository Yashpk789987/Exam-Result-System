    </nav>
    <div class="container" >
      <div class="col-md-6">
          <div class="card mt-4">
              <div class="card-header">
                  <b>Add Teacher Details</b>
              </div>
              <form action='/teacher/update' method='post'>
                  <input type="text" name="_id" value="<%=teacher._id%>"  hidden>
                  <div class="card-body register">
                      <p class="card-text"><b>Please fill teacher details here</b></p>
                      <div class="form-group">
                          <label for="formGroupExampleInput">Teacher Name </label>
                          <input value = "<%=teacher.name%>" type="text" required class = "form-control" name="name" placeholder="Teacher Name">
                      </div>
                      <div class="form-group">
                        <label for="formGroupExampleInput">Email </label>
                        <input value = "<%=teacher.email%>" type="email" required class = "form-control" name="email" placeholder="Email">
                      </div>
                      <div class="form-group">
                        <label for="formGroupExampleInput">Mobile No. </label>
                        <input value = "<%=teacher.mobile%>" type="text" required class = "form-control" name="mobile" placeholder="Mobile No. ">
                      </div>
                      <div class="form-group">
                        <label for="formGroupExampleInput">Password </label>
                        <input value = "<%=teacher.password%>" type="password" required class = "form-control" name="password" placeholder="Password">
                      </div>
                      <div class="form-group">
                        <input type="submit" value="Update" style = "width : 100%" class="btn btn-primary" >
                      </div>
                  </div>
              </form>
          </div>
      </div>
